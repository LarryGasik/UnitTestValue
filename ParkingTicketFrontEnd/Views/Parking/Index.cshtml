@model ParkingTicketFrontEnd.Models.ParkingTicket_VM
@{
    ViewBag.Title = "Parking Tester";
    SelectList offenseList = ViewBag.Offenses;
    
}
    <h2>Parking Tester Page</h2>
    <div class="row">
        <div class="col-sm-12, col-md-6">
            @using (Html.BeginForm("Index", "Parking", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Enter Information</h4>
                <hr />
                <div class="form-group">
                    <div class="col-md-2">
                        <p>Offense:</p>
                    </div>
                    <div class="col-md-10">
                        @Html.DropDownList("cboOffense", offenseList, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <p>Zip Code:</p>
                    </div>
                    <div class="col-md-10">
                       @Html.TextBoxFor(model => model.ZipCode, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <p>Vehicle Tags:</p>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.VehicleTag, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Issue Ticket" class="btn btn-info" />
                    </div>
                </div>
            </div>
            }
        </div>
        <div class="col-sm-12, col-md-6">
            <h4>Response message from Ticket</h4>
            <p class="alert alert-info" role="alert">
                @Html.DisplayTextFor(model => model.ParkingTicketMessage)
            </p>
            
        </div>
    </div>
            

